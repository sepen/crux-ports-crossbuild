# Description: GNU Binutils for crosscompiling target arm-linux-gnu
# URL: https://sources.redhat.com/binutils/
# Maintainer: CRUX System Team, core-ports at crux dot nu
# Arch Maintainer: CRUX-ARM System Team, devel at crux-arm dot nu
# Depends on: zlib

name=binutils-arm-linux-gnu
version=2.23.2
release=1
source=(ftp://ftp.gnu.org/gnu/binutils/binutils-$version.tar.bz2)

target=arm-linux-gnu

build() {
  # We don't have makeinfo, so don't try to build documentation.
  sed -i '/^SUBDIRS/s/doc//' binutils-$version/*/Makefile.in

  mkdir build
  cd build

  unset CFLAGS
  unset CXXFLAGS

  AR=ar AS=as \
  $SRC/binutils-$version/configure \
      --host=$(echo $MACHTYPE | sed 's/-[^-]*/-cross/') \
      --target=$target \
      --prefix=/usr \
      --nfp \
      --enable-shared \
      --disable-nls \
      --disable-werror \
      --disable-multilib

  make configure-host
  make
  make DESTDIR=$PKG install

  rm -rf $PKG/usr/share $PKG/usr/lib
  install -D -m 0644 $SRC/binutils-$version/include/libiberty.h $PKG/usr/include/libiberty.h
}
