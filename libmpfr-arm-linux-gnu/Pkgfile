# Maintainer: CRUX System Team, core-ports at crux dot nu
# Arch Maintainer: CRUX-ARM System Team, devel at crux-arm dot nu
# Depends on: libgmp-arm-linux-gnu

name=libmpfr-arm-linux-gnu
version=4.2.1
release=1
source=(https://ftp.gnu.org/gnu/mpfr/mpfr-$version.tar.xz)

_target=arm-linux-gnu
_crosshost=$(echo $MACHTYPE | sed 's/-[^-]*/-cross/')

build() {
  mkdir $SRC/build
  cd $SRC/build

  unset CFLAGS
  unset CXXFLAGS

  export LDFLAGS="-Wl,-rpath,/usr/$_target/lib"

  $SRC/mpfr-$version/configure \
    --prefix=/usr/$_target \
    --enable-shared \
    --with-gmp=/usr/$_target

  make
  make DESTDIR=$PKG install

  rm -rf $PKG/usr/$_target/share

  find $PKG -type f -name '*.la' | while read f; do
    sed -i "s|-L$SRC[^ ]* ||g" $f
  done
}
